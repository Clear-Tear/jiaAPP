/*头部信息*/
.toubu {
  display: flex;
  margin: 1px;
  padding: 10px;
  background-color: rgb(0, 145, 255);
}

.toubu-zuo-touxiang {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border: 2px solid white;
  box-shadow: 3px 3px 10px gainsboro;
  display: block;
  overflow: hidden;
}
.toubu-you {
  padding-left: 10px;
}
.toubu-you-txt1 {
  color: white;
}
.toubu-you-txt2 {
  background-color: crimson;
  color: white;
  margin: 5px 0px;
  padding: 5px;
}
.toubu-you-txt3 {
  color: white;
}

.caidan{
  display: flex;
  padding: 10px; 
  border-bottom: 1px solid gainsboro;
  margin-top: 10px;
}
.caidan-icon{
  width: 20px; height: 20px;
}
.caidan-text{
  flex-grow: 1;
  margin-left: 10px;
}
.caidan-arrow{
  width: 16px; height: 16px;
}
